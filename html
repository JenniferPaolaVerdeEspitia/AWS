<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conector n8n</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <style>
        body, html {
            height: 100%;
        }
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #000;
        }
        .card {
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        /* Estilo para el display del resultado */
        #result-display {
            background-color: var(--bs-body-bg);
            border: 1px solid var(--bs-border-color);
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card shadow-lg rounded-4 bg-dark-subtle">
                    <div class="card-body p-5">
                        <h2 class="card-title text-center mb-4 fw-light">Calculadora n8n</h2>
                        <p class="card-subtitle text-center text-body-secondary mb-4">Enviar operación a n8n y recibir resultado</p>

                        <form id="n8n-form">
                            
                            <div class="mb-3">
                                <label for="operacionCompleta" class="form-label">Operación</label>
                                <input type="text" class="form-control" id="operacionCompleta" placeholder="Ej: 10 + 5" required>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary btn-lg" id="submit-button">
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" id="spinner"></span>
                                    <span id="button-text">Calcular</span>
                                </button>
                            </div>
                        </form>

                        <div id="result-container" class="mt-4" style="display: none;">
                            <label class="form-label fs-5">Resultado:</label>
                            <div id="result-display" class="p-3 rounded">
                                <p class="h4 text-center text-success mb-0" id="result-text">---</p>
                            </div>
                        </div>
                        
                        <div id="message-area" class="mt-4"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- CONFIGURACIÓN ---
            const n8nWebhookUrl = 'https://jenniferpaola.app.n8n.cloud/webhook/0d5318a9-c057-47fa-b183-7a456175c83c';
            // -------------------

            const form = document.getElementById('n8n-form');
            const submitButton = document.getElementById('submit-button');
            const buttonText = document.getElementById('button-text');
            const spinner = document.getElementById('spinner');
            const messageArea = document.getElementById('message-area');
            const resultContainer = document.getElementById('result-container');
            const resultText = document.getElementById('result-text');

            // 1. Función para obtener la IP pública (sin cambios)
            async function getPublicIP() {
                try {
                    const response = await fetch('https://api.ipify.org?format=json');
                    if (!response.ok) throw new Error('No se pudo obtener la IP');
                    const data = await response.json();
                    return data.ip;
                } catch (error) {
                    console.error('Error al obtener la IP:', error);
                    showMessage('No se pudo obtener la dirección IP. Se enviará "desconocida".', 'warning');
                    return 'desconocida';
                }
            }

            // === NUEVA FUNCIÓN ===
            // 2. Función para obtener la fecha de México
            function getMexicoDateString() {
                try {
                    // Opciones para formatear la fecha en la zona horaria de México
                    const options = {
                        timeZone: 'America/Mexico_City',
                        year: 'numeric',
                        month: '2-digit',
                        day: '2-digit',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: false // Formato de 24 horas
                    };
                    
                    // Usamos 'sv-SE' (Sueco) porque da un formato YYYY-MM-DD HH:MM:SS
                    const formatter = new Intl.DateTimeFormat('sv-SE', options);
                    const dateString = formatter.format(new Date());
                    
                    // Reemplazamos el espacio por una 'T' para un formato más estándar
                    return dateString.replace(' ', 'T');
                } catch (e) {
                    console.error("Error al formatear fecha de México, usando UTC.", e);
                    return new Date().toISOString(); // Fallback a UTC
                }
            }

            // === NUEVA FUNCIÓN ===
            // 3. Función para analizar la operación
            function parseOperation(input) {
                // Regex para encontrar: (número) (operador) (número)
                // Permite espacios, decimales y números negativos al inicio.
                const regex = /^\s*(-?\d+\.?\d*)\s*([\+\-\\/])\s(-?\d+\.?\d*)\s*$/;
                const match = input.match(regex);

                if (!match) {
                    throw new Error('Formato de operación inválido. Use: número operador número (Ej: 10 + 5)');
                }

                const operandoA = parseFloat(match[1]);
                const operandoB = parseFloat(match[3]);
                const operadorSimbolo = match[2];

                if (isNaN(operandoA) || isNaN(operandoB)) {
                    throw new Error('Números inválidos en la operación.');
                }

                let operacionTexto;
                switch (operadorSimbolo) {
                    case '+': operacionTexto = 'suma'; break;
                    case '-': operacionTexto = 'resta'; break;
                    case '*': operacionTexto = 'multiplicar'; break;
                    case '/': operacionTexto = 'dividir'; break;
                    default:
                        // Esto no debería pasar gracias al regex, pero es una buena práctica
                        throw new Error('Operador no soportado.');
                }

                return {
                    operandoA: operandoA,
                    operandoB: operandoB,
                    operacion: operacionTexto
                };
            }

            // 4. Manejador del envío del formulario (MODIFICADO)
            form.addEventListener('submit', async (e) => {
                e.preventDefault(); 

                if (n8nWebhookUrl.includes('YOUR_N8N_WEBHOOK_URL')) {
                    showMessage('Error: Debes configurar la URL del Webhook en el archivo HTML (variable n8nWebhookUrl).', 'danger');
                    return;
                }

                setLoading(true);
                showMessage(); // Limpiar mensajes anteriores
                resultContainer.style.display = 'none'; // Ocultar resultado anterior
                resultText.classList.remove('text-danger', 'text-success');

                try {
                    // === INICIO DE MODIFICACIÓN ===
                    const operacionCompleta = document.getElementById('operacionCompleta').value;
                    
                    let parsedData;
                    try {
                        // 1. Intentamos analizar la operación
                        parsedData = parseOperation(operacionCompleta);
                    } catch (parseError) {
                        // Si falla el análisis, mostramos error y detenemos
                        showMessage(parseError.message, 'danger');
                        setLoading(false);
                        return; 
                    }

                    // 2. Obtenemos IP y Fecha de México
                    const ipUsuario = await getPublicIP();
                    const fechaEnvio = getMexicoDateString(); // Usamos la nueva función

                    // 3. Creamos el payload
                    const payload = {
                        operandoA: parsedData.operandoA,
                        operandoB: parsedData.operandoB,
                        operacion: parsedData.operacion,
                        ipUsuario: ipUsuario,
                        fechaEnvio: fechaEnvio
                    };
                    // === FIN DE MODIFICACIÓN ===
                    
                    const response = await fetch(n8nWebhookUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    // Lógica para manejar la respuesta (Sin cambios)
                    if (response.ok) {
                        const responseData = await response.json();

                        if (responseData && responseData.resultado !== undefined) {
                            resultText.textContent = responseData.resultado;
                            
                            if (String(responseData.resultado).toLowerCase().includes('error')) {
                                resultText.classList.add('text-danger');
                            } else {
                                resultText.classList.add('text-success');
                            }

                            resultContainer.style.display = 'block';
                            showMessage('Cálculo completado con éxito.', 'success');
                            form.reset();
                        } else {
                            showMessage('Datos enviados, pero n8n no devolvió un resultado válido.', 'warning');
                            resultContainer.style.display = 'none';
                        }
                    } else {
                        throw new Error(Error del servidor: ${response.status} ${response.statusText});
                    }

                } catch (error) {
                    console.error('Error al enviar datos a n8n:', error);
                    showMessage('Error al enviar datos. Revisa la consola para más detalles (F12). Posible problema de CORS.', 'danger');
                } finally {
                    setLoading(false);
                }
            });

            // 5. Función para mostrar/ocultar estado de carga (sin cambios)
            function setLoading(isLoading) {
                if (isLoading) {
                    submitButton.disabled = true;
                    buttonText.textContent = 'Calculando...';
                    spinner.classList.remove('d-none');
                } else {
                    submitButton.disabled = false;
                    buttonText.textContent = 'Calcular';
                    spinner.classList.add('d-none');
                }
            }

            // 6. Función para mostrar mensajes (sin cambios)
            function showMessage(message, type = 'success') {
                messageArea.innerHTML = '';
                if (!message) return; 
                const alertDiv = document.createElement('div');
                alertDiv.className = alert alert-${type} alert-dismissible fade show;
                alertDiv.role = 'alert';
                alertDiv.innerHTML = `
                    ${message}
                    <button type"button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                messageArea.appendChild(alertDiv);
            }
        });
    </script>

</body>
</html>
